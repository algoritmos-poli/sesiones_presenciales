@startuml
' Diagrama de Clases para una Lista Enlazada
skinparam classAttributeIconSize 0
hide empty members

class Node {
  ~ int data
  ~ Node next
  + Node()
  + Node(int data)
  + toString(): String
}

class LinkedList {
  - Node head
  - Node tail
  + addAfter(Node, int): void
  + addFirst(int): void
  + addLast(int): void
  + get(int): Node
  + remove(int): boolean
  + clear(): void
  + contains(int): boolean
  + size(): int
  + isEmpty(): boolean
  + toString(): String
}

class LinkedListTest {
  + {static} main(String[]): void
}

